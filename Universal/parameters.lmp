
variable label string swm4-ndp.${cation}.${anion}
variable numWaters equal 250
variable numAnions index 1
variable SEED index 1

# Physical Parameters
variable rho equal 1            # Density (g/cm^3)
variable MR  equal 18.00        # Molar Mass (g/mol)
variable NA  equal 6.022e23     # Avogadro's Constant (1/mol)

variable L equal "(10*v_numWaters*v_MR/(v_rho * v_NA))^(1/3)*1e8"
variable S    equal floor(random(0,2^16,v_SEED))

molecule water ../FF/swm4-ndp.mol